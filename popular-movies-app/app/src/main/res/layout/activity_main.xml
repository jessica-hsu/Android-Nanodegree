<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <!-- buttons to toggle between most popular and highest ratings -->
    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <Button xmlns:android="http://schemas.android.com/apk/res/android"
            android:id="@+id/button_popular"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/button_popular" />

        <Button xmlns:android="http://schemas.android.com/apk/res/android"
            android:id="@+id/button_rating"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/button_ratings" />

    </LinearLayout>

    <TextView
        android:id="@+id/test"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="300dp"
        android:text="fdasfasfafasd"
        app:layout_constraintTop_toTopOf="parent" />
    <!-- grid for movie posters -->
    <GridView xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/movie_grid"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="50dp"
        android:columnWidth="0dp"
        android:gravity="center"
        android:horizontalSpacing="0dp"
        android:numColumns="auto_fit"
        android:stretchMode="columnWidth"
        android:verticalSpacing="0dp"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout"></GridView>



</android.support.constraint.ConstraintLayout>